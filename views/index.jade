extends layout
block content
  script
    function HTML_content_change(index)
    {
      $("li").siblings().removeClass("active");
      switch(index)
        {
          case '_home':
            $.post('/home',"",function(data){
              $("#HTML_content").html(data);
            });
            //alert(index);
            break;
          case '_play':
            $("#HTML_content").html("");
            content = '<div id="game" style="overflow: hidden;"><\/div>' + 
            '<script src="/js/game_control.js">' + '<\/script>' + 
            '<script src="/js/game_play.js">' + '<\/script>' + 
            '<script src="/js/game_menu.js">' + '<\/script>' + 
            '<script src="/js/game.js">' + '<\/script>';
            $("#HTML_content").html(content);
            //alert(index);
            break;
          case '_about':
            alert(index);
            break;
          case '_contact':
            alert(index);
            break;
          defaule:
            alert(index);
            break;
        }
        $("#"+index).addClass("active");
    }
  div(class="container")
    div(class="masthead")
      h2(class="text-muted") Shout2Play
      ul(class="nav nav-justified")
        li(id="_home",class="active")
          a(href='javascript:HTML_content_change("_home");') Home
        li(id="_play")
          a(href='javascript:HTML_content_change("_play");') Play
        li(id="_about")
          a(href='javascript:HTML_content_change("_about");') About
        li(id="_contact")
          a(href='javascript:HTML_content_change("_contact");') Contact
